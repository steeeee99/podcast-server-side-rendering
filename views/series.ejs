<%- include('header',{title,message,loggedIn,creator}); %>
<main class="top-56">
    <h4 id='main-title' class='mx-3 mt-2'><%=title%></h4>

<% if(research) {%>
<%- include('research-form',{categories,typeResearch: typeResearch}); %>
<% } %>

<ul id="main-list" class="list-group mx-3">
    
    <% for(let s of series){  %>
        <li class="list-group-item mb-2">
            
            <row class="row">
                <div class="col-6 pl-2 pr-3">
                    <a href="/<%=s.title%>/info"><img src="<%=s.url_img%>" alt="..." class="img-fluid rounded-circle"></a> 
                </div>
                <div class="col-6 px-3">
                    <row class="row">
                        <a href="/<%=s.title%>/info">
                             <h5><%=s.title%></h5> 
                         </a>
                      </row>
                      <row class="row"><span class="badge"><%=s.category%></span></row> 
                      <% if(loggedIn) {%>
                        <%- include('following-button',{series: s}); %>
                      <% } %>  
                    </row>
                </div>
           
          </li>
    <% }; %>
          
</ul>
</main>

<%- include('confirm-modal',{title:'Smettere di seguire?',confirmButtonType:'confirm-unfollow-button',modalID:'confirm-unfollow'}); %>
<% if(!loggedIn) { %>
    <%- include('login-button'); %>
<% } %>
<%- include('footer'); %>